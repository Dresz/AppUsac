<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sergi.meusac.datosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Datos Personales"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtDatosNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtDatosCarnet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtDatosCarrera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtDatosDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtDatosTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtDatosFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnEditar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:text="Editar"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="1" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
